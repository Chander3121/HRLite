<h1 class="text-2xl font-bold mb-6">Add Employee</h1>

<div class="bg-white rounded-xl shadow p-6 max-w-xl">
  <%= form_with model: @user,
                url: admin_employees_path,
                data: { turbo: false },
                class: "space-y-5" do |f| %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email,
          class: "mt-1 w-full rounded-lg border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <%= fields_for :employee_profile do |ep| %>
      <div>
        <%= ep.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= ep.text_field :first_name,
            class: "mt-1 w-full rounded-lg border-gray-300" %>
      </div>

      <div>
        <%= ep.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= ep.text_field :last_name,
            class: "mt-1 w-full rounded-lg border-gray-300" %>
      </div>

      <div>
        <%= ep.label :designation, class: "block text-sm font-medium text-gray-700" %>
        <%= ep.text_field :designation,
            class: "mt-1 w-full rounded-lg border-gray-300" %>
      </div>

      <div>
        <%= ep.label :joining_date, class: "block text-sm font-medium text-gray-700" %>
        <%= ep.date_field :joining_date,
            class: "mt-1 w-full rounded-lg border-gray-300" %>
      </div>

      <div>
        <%= ep.label :salary, class: "block text-sm font-medium text-gray-700" %>
        <%= ep.number_field :salary,
            step: 0.01,
            class: "mt-1 w-full rounded-lg border-gray-300" %>
      </div>
    <% end %>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel",
          admin_employees_path,
          class: "px-4 py-2 rounded-lg border border-gray-300 text-gray-600" %>

      <%= f.submit "Create Employee",
          class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
