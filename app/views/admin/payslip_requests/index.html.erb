<h1 class="text-2xl font-bold mb-6">Payslip Requests</h1>

<div class="bg-white rounded-xl shadow overflow-hidden">
  <table class="min-w-full text-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left">Employee</th>
        <th class="px-6 py-3 text-left">Month</th>
        <th class="px-6 py-3 text-left">Status</th>
        <th class="px-6 py-3 text-left">Action</th>
      </tr>
    </thead>

    <tbody class="divide-y">
      <% @requests.each do |request| %>
        <tr>
          <td class="px-6 py-3"><%= request.user.email %></td>

          <td class="px-6 py-3">
            <%= request.month.strftime("%B %Y") %>
          </td>

          <td class="px-6 py-3">
            <span class="px-2 py-1 rounded-full text-xs font-medium
              <%= request.pending? ? "bg-yellow-100 text-yellow-700" :
                  "bg-green-100 text-green-700" %>">
              <%= request.status.titleize %>
            </span>
          </td>

          <td class="px-6 py-3">
            <% if request.pending? %>
              <%= button_to "Generate Payslip",
                  admin_payslip_request_path(request),
                  method: :patch,
                  class: "px-3 py-1 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
            <% else %>
              <%= link_to "Download",
                  rails_blob_path(request.file, disposition: :attachment),
                  class: "text-indigo-600 hover:underline text-sm" %>
            <% end %>
          </td>
        </tr>
      <% end %>

      <% if @requests.empty? %>
        <tr>
          <td colspan="4" class="px-6 py-6 text-center text-gray-500">
            No payslip requests pending
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
