<h1 class="text-2xl font-bold mb-6">My Regularization Requests</h1>

<table class="min-w-full bg-white rounded-xl shadow text-sm">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3">Date</th>
      <th class="px-6 py-3">Status</th>
      <th class="px-6 py-3">Reason</th>
    </tr>
  </thead>

  <tbody class="divide-y">
    <% @requests.each do |r| %>
      <tr>
        <td class="px-6 py-3"><%= r.date %></td>
        <td class="px-6 py-3"><%= r.status.titleize %></td>
        <td class="px-6 py-3"><%= r.reason %></td>
      </tr>
    <% end %>
  </tbody>
</table>
