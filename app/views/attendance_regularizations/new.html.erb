<h1 class="text-2xl font-bold mb-6">Attendance Regularization</h1>

<div class="bg-white rounded-xl shadow p-6 max-w-xl">
  <%= form_with model: @request,
                data: { turbo: false },
                class: "space-y-5" do |f| %>

    <div>
      <%= f.label :date, class: "block text-sm font-medium" %>
      <%= f.date_field :date,
          class: input_class %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :check_in %>
        <%= f.datetime_local_field :check_in,
            class: input_class %>
      </div>

      <div>
        <%= f.label :check_out %>
        <%= f.datetime_local_field :check_out,
            class: input_class %>
      </div>
    </div>

    <div>
      <%= f.label :reason %>
      <%= f.text_area :reason,
          rows: 3,
          class: input_class %>
    </div>

    <p class="text-xs text-gray-500">
      Regularization allowed only within last 7 days.
    </p>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel",
          attendance_regularizations_path,
          class: "px-4 py-2 border rounded-lg" %>

      <%= f.submit "Submit Request",
          class: "px-4 py-2 bg-indigo-600 text-white rounded-lg" %>
    </div>
  <% end %>
</div>
