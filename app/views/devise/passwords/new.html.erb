<h1 class="text-2xl font-semibold mb-4">Set or Reset Password</h1>

<p class="text-sm text-gray-500 mb-6">
  If your password setup link has expired, enter your email below
  and weâ€™ll send you a new one.
</p>

<%= form_with scope: resource_name,
              url: password_path(resource_name),
              data: { turbo: false },
              class: "space-y-5" do |f| %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium" %>
    <%= f.email_field :email,
        placeholder: "employee@company.com",
        class: input_class %>
  </div>

  <%= f.submit "Send new password link",
      class: "w-full bg-indigo-600 text-white py-2.5 rounded-xl
              hover:bg-indigo-700 transition" %>
<% end %>
