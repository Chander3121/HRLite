<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-xl shadow">
  <h1 class="text-xl font-semibold text-gray-900 mb-4">
    Employee Verification
  </h1>

  <% if @profile %>
    <div class="space-y-2 text-sm">
      <p><strong>Name:</strong> <%= @profile.first_name %> <%= @profile.last_name %></p>
      <p><strong>Employee ID:</strong> <%= @profile.emp_id %></p>
      <p><strong>Designation:</strong> <%= @profile.designation %></p>
      <p><strong>Status:</strong>
        <span class="<%= @profile.active? ? 'text-green-600' : 'text-red-600' %>">
          <%= @profile.status.titleize %>
        </span>
      </p>
    </div>
  <% end %>
</div>
