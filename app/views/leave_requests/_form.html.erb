<%= form_with model: @leave_request, data: { turbo: false }, class: "space-y-5" do |f| %>
  <div>
    <%= f.label :leave_type, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :leave_type,
        LeaveRequest.leave_types.keys.map { |t| [t.titleize, t] },
        {},
        class: input_class %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :start_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :start_date, class: input_class %>
    </div>

    <div>
      <%= f.label :end_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :end_date, class: input_class %>
    </div>
  </div>

  <div>
    <%= f.label :reason, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :reason, rows: 3, class: input_class %>
  </div>

  <div class="flex justify-end gap-3 pt-4">
    <%= link_to "Cancel",
        leave_requests_path,
        class: "px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50" %>

    <%= f.submit "Save Changes",
        class: "px-5 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700" %>
  </div>
<% end %>
