<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">My Leaves</h1>

  <%= link_to "Apply Leave",
      new_leave_request_path,
      class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
</div>

<div class="bg-white rounded-xl shadow overflow-hidden">
  <table class="min-w-full text-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3">Type</th>
        <th class="px-6 py-3">Duration</th>
        <th class="px-6 py-3">Reason</th>
        <th class="px-6 py-3">Status</th>
        <th class="px-6 py-3">Action</th>
      </tr>
    </thead>

    <tbody class="divide-y">
      <% @leaves.each do |leave| %>
        <tr>
          <td class="px-6 py-3 text-center"><%= leave.leave_type.titleize %></td>
          <td class="px-6 py-3 text-center">
            <%= leave.start_date.strftime("%d %b %Y") %> â†’ <%= leave.end_date.strftime("%d %b %Y") %>
          </td>
          <td class="px-6 py-3 text-center"><%= leave.reason %></td>
          <td class="px-6 py-3 text-center">
            <span class="px-2 py-1 rounded-full text-xs font-medium
              <%= leave.pending? ? "bg-yellow-100 text-yellow-700" :
                  leave.approved? ? "bg-green-100 text-green-700" :
                  "bg-red-100 text-red-700" %>">
              <%= leave.status.titleize %>
            </span>
          </td>
          <td class="px-6 py-3 text-center">
            <% if leave.pending? %>
              <%= link_to "Edit",
                  edit_leave_request_path(leave),
                  class: "text-indigo-600 text-sm font-medium hover:underline" %>
            <% else %>
              <span class="text-xs text-gray-400">Locked</span>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if @leaves.empty? %>
        <tr>
          <td colspan="4" class="px-6 py-6 text-center text-gray-500">
            No leave requests found.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
