<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">My Leaves</h1>

  <%= link_to "Apply Leave",
      new_leave_request_path,
      class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
</div>

<div class="bg-white rounded-xl shadow overflow-hidden">
  <table class="min-w-full text-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left">Type</th>
        <th class="px-6 py-3 text-left">Duration</th>
        <th class="px-6 py-3 text-left">Status</th>
      </tr>
    </thead>

    <tbody class="divide-y">
      <% @leaves.each do |leave| %>
        <tr>
          <td class="px-6 py-3"><%= leave.leave_type.titleize %></td>
          <td class="px-6 py-3">
            <%= leave.start_date %> â†’ <%= leave.end_date %>
          </td>
          <td class="px-6 py-3">
            <span class="px-2 py-1 rounded-full text-xs font-medium
              <%= leave.pending? ? "bg-yellow-100 text-yellow-700" :
                  leave.approved? ? "bg-green-100 text-green-700" :
                  "bg-red-100 text-red-700" %>">
              <%= leave.status.titleize %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
