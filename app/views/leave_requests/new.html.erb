<h1 class="text-2xl font-bold mb-6">Apply for Leave</h1>

<div class="bg-white rounded-xl shadow p-6 max-w-xl">
  <%= form_with model: @leave,
                data: { turbo: false },
                class: "space-y-5" do |f| %>

    <div>
      <%= f.label :leave_type, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :leave_type,
          LeaveRequest.leave_types.keys.map { |k| [k.titleize, k] },
          {},
          class: input_class %>
    </div>

    <div>
      <%= f.label :start_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :start_date,
          class: input_class %>
    </div>

    <div>
      <%= f.label :end_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :end_date,
          class: input_class %>
    </div>

    <div>
      <%= f.label :reason, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :reason,
          rows: 3,
          class: input_class %>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel",
          leave_requests_path,
          class: "px-4 py-2 rounded-lg border text-gray-600" %>

      <%= f.submit "Apply Leave",
          class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
