<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900">My Letters</h1>
  <p class="text-sm text-gray-500 mt-1">
    Download HR letters issued to you.
  </p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
  <% @letters.each do |letter| %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition">
      <div class="flex items-start justify-between gap-4">
        <div>
          <p class="text-xs uppercase tracking-wide text-gray-400">
            <%= letter.letter_type.titleize %>
          </p>
          <h2 class="text-lg font-semibold text-gray-900">
            <%= letter.title %>
          </h2>
        </div>

        <span class="px-2.5 py-1 rounded-full text-xs font-semibold bg-emerald-50 text-emerald-700 border border-emerald-100">
          Issued
        </span>
      </div>

      <p class="mt-4 text-sm text-gray-500">
        Issued On: <span class="font-medium text-gray-900"><%= letter.issued_on.strftime("%d %b %Y") %></span>
      </p>

      <div class="mt-6 flex items-center justify-between">
        <%= link_to "View",
            letter_path(letter),
            class: "text-sm font-medium text-indigo-600 hover:underline" %>

        <%= link_to download_letter_path(letter),
            class: "inline-flex items-center gap-2 text-sm font-semibold text-gray-900 hover:underline" do %>
          <%= heroicon "arrow-down-tray", variant: :outline, options: { class: "h-5 w-5" } %>
          Download PDF
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @letters.empty? %>
    <div class="col-span-full bg-white rounded-2xl border border-gray-100 p-10 text-center">
      <p class="text-gray-600">No letters issued yet.</p>
      <p class="text-sm text-gray-400 mt-1">Youâ€™ll see letters here once admin issues them.</p>
    </div>
  <% end %>
</div>
