<h1 class="text-2xl font-bold mb-6">Payslip Requests</h1>

<%= link_to "Request Payslip",
    new_payslip_request_path,
    class: "mb-4 inline-block bg-indigo-600 text-white px-4 py-2 rounded-lg" %>

<table class="min-w-full bg-white rounded-xl shadow text-sm">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left">Month</th>
      <th class="px-6 py-3 text-left">Status</th>
      <th class="px-6 py-3 text-left">Download</th>
    </tr>
  </thead>

  <tbody class="divide-y">
    <% @requests.each do |req| %>
      <tr>
        <td class="px-6 py-3"><%= req.month.strftime("%B %Y") %></td>
        <td class="px-6 py-3"><%= req.status.titleize %></td>
        <td class="px-6 py-3">
          <% if req.generated? && req.file.attached? %>
            <%= link_to "Download",
                rails_blob_path(req.file, disposition: :attachment),
                class: "text-indigo-600 hover:underline" %>
          <% else %>
            â€”
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
