<h1 class="text-2xl font-bold mb-6">My Profile</h1>

<div class="bg-white rounded-xl shadow p-6 max-w-xl">
  <%= form_with model: @profile,
                url: profile_path,
                method: :patch,
                data: { turbo: false },
                class: "space-y-5" do |f| %>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name,
            class: "mt-1 w-full rounded-lg border-gray-300" %>
      </div>

      <div>
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name,
            class: "mt-1 w-full rounded-lg border-gray-300" %>
      </div>
    </div>

    <div class="bg-gray-50 p-4 rounded-lg text-sm text-gray-600">
      Salary, role, and designation can only be changed by admin.
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel",
          dashboard_path,
          class: "px-4 py-2 border rounded-lg text-gray-600" %>

      <%= f.submit "Save Changes",
          class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
