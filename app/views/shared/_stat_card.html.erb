<div class="relative bg-white rounded-xl border p-6 hover:shadow-md transition">
  <div class="flex items-center gap-4">
    <div class="flex h-12 w-12 items-center justify-center rounded-lg
      bg-<%= color %>-50 text-<%= color %>-600">
      <%= heroicon icon, variant: :outline, options: { class: "h-6 w-6" } %>
    </div>

    <div>
      <p class="text-sm text-gray-500"><%= title %></p>
      <p class="text-2xl font-bold text-gray-900"><%= value %></p>
    </div>
  </div>

  <% if link_present %>
    <%= link_to "",
        yield,
        class: "absolute inset-0 rounded-xl" %>
  <% end %>
</div>
