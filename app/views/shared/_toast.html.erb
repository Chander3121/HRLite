<div
  class="bg-white border-l-4 border-indigo-600 shadow-lg rounded-lg p-4
         flex items-start gap-3 animate-slide-in cursor-pointer hover:bg-gray-50"
  data-controller="toast"
  data-toast-timeout-value="5000"
  data-toast-url-value="<%= url %>"
  data-action="click->toast#open mouseenter->toast#pause mouseleave->toast#resume">

  <div class="flex-shrink-0">
    <%= heroicon icon,
        variant: :outline,
        options: { class: "h-5 w-5 text-indigo-600" } %>
  </div>

  <div class="flex-1">
    <p class="text-sm font-medium text-gray-900"><%= title %></p>
    <p class="text-xs text-gray-500 mt-1"><%= message %></p>
  </div>

  <button type="button"
          class="text-gray-400 hover:text-gray-600"
          data-action="click->toast#close">
    âœ•
  </button>
</div>
